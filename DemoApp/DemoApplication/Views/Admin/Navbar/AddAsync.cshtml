@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using DemoApplication.ViewModels.Admin.Navbar
@model AddViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Navbar</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-navbar-add">

                      

                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DirectedUrl"></label>
                            <input asp-for="DirectedUrl" class="form-control">
                            <span asp-validation-for="DirectedUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Order"></label>
                            <input asp-for="Order" class="form-control">
                            <span asp-validation-for="Order" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch">
                            <label asp-for="IsBold"></label>
                            <input type="checkbox" asp-for="IsBold" class="form-check-input">
                            <span asp-validation-for="IsBold" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch">
                            <label asp-for="IsShowenHeader"></label>
                            <input type="checkbox" asp-for="IsShowenHeader" class="form-check-input">
                            <span asp-validation-for="IsShowenHeader" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch">
                            <label asp-for="IsShowenFooter"></label>
                            <input type="checkbox" asp-for="IsShowenFooter" class="form-check-input">
                            <span asp-validation-for="IsShowenFooter" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>