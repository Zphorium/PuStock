@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using DemoApplication.ViewModels.Admin.SubNavbar
@model List<ListItemViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-subnavbar-add" target="_blank" class="btn btn-secondary">Add new navbar</a>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">SubNavbars</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Order</th>
                                                        
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subnavbar in Model)
                        {
                            <tr>
                                
                                <td>@subnavbar.Name</td>
                                <td>@subnavbar.Order</td>
                                


                                <td class="text-end">
                                    <a asp-route="admin-subnavbar-update" asp-route-id="@subnavbar.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form asp-route="admin-subnavbar-delete" asp-route-id="@subnavbar.Id" id="update-@subnavbar.Id"></form>
                                    <button form="update-@subnavbar.Id"><i class="las la-trash-alt text-secondary font-16"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>